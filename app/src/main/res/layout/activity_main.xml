<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="Welcome to the garage"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcomePage_textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="client/admin"
            android:textColor="#531010"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TXT_Garage_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:text="Name:"
            android:textColor="#531010"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TXT_total_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:text="Total spent time:"
            android:textColor="#531010"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TXT_Last_Session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:text="Last seen:"
            android:textColor="#531010"
            android:textSize="17dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/TXT_Garage_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:text="is open?:"
            android:textColor="#531010"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TXT_Garage_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:text="Address:"
            android:textColor="#531010"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TXT_Cars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:text="Cars:"
            android:textColor="#531010"
            android:textSize="17dp"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>